{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es2015",
    "module": "commonjs"
  },
  "include": ["**/*.ts"],
  "exclude": ["**/*.util.ts", "**/*.spec.ts", "**/*.test.ts", "src/db/migrations/**/*.{.ts,.js}"]
}
